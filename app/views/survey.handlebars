

  <div class="container">
    {{#if matched}}
    <!-- Modal -->
    <div id="mySimpleModal" class="myModal">
      <div class="my-modal-content">
        <div class="my-modal-header">
          <span class="myCloseBtn">&times;</span>
          <h3 class="text-center">Your best match is:</h3>
        </div>
        <div class="my-modal-body">
          <h2 class="text-center mb-3">{{match.name}}</h2>
          <img class="avatar" src="{{match.avatar}}" alt="">
        </div>
      </div>
    </div>
    {{/if}}
    <h2 class="survey mt-3 pb-3">Survey Questions</h2>
    {{#if error}}
    <div class="alert">{{error}}</div>
    {{/if}}
    <h3 class="mt-3">About You</h3>
    <form method="POST" action="/api/friends" id="form">
      <div class="form-group">
        <label for="name">Name (Required)</label>
        <input type="text" class="form-control" id="name" name="name">
      </div>
      <div class="form-group avatar pb-4">
        <label for="avatar">Link to Photo Image (Optional)</label>
        <input type="text" class="form-control" id="avatar" name="avatar">
      </div>
      {{#each questions}}
      <div class="question">
        <h3>Question {{num}}</h3>
        <h4>{{question}}</h4>
        <div class="options input-group input-small mb-3">
          <select name="scores" class="custom-select" id="q{{num}}">
            <option value="*unanswered*">Select an Option</option>
            <option value="1">1 (Strongly Disagree)</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5 (Strongly Agree)</option>
          </select>
        </div>
      </div>
      {{/each}}
      <button type="submit" id="submit" class="btn btn-lg btn-primary btn-block mb-4"><i class="fa fa-check-circle mr-2" aria-hidden="true"></i>Submit</button>
    </form>
    <hr>
  </div>
  
    </body>

    </html>